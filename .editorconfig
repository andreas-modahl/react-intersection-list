# http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.js]
charset = utf-8
indent_style = space
indent_size = 4

[{package.json,.babelrc,.eslintrc}]
indent_style = space
indent_size = 2
